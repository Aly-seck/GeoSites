		        "filters":{
					"code_region" :{
						"name" : "Region",
						"values" : {
							"PAC":{"label":"Aigle botté", "color":"#FF6A00", "visible":true},
							"RHA":{"label":"Aigle de Bonelli", "color":"maroon", "visible":true}							
